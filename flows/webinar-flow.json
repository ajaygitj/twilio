{
  "description": "Web Chatbot via REST API",
  "states": [
    {
      "name": "trigger",
      "type": "trigger",
      "transitions": [
        {
          "event": "rest_api",
          "next": "check_param"
        }
      ],
      "properties": {
        "offset": {
          "x": 100,
          "y": 50
        }
      }
    },
    {
      "name": "check_param",
      "type": "split-based-on",
      "transitions": [
        {
          "event": "noConditionMatched",
          "next": "default_reply"
        },
        {
          "conditions": [
            {
              "friendly_name": "Has initial_message",
              "arguments": [
                "{{flow.data.initial_message}}"
              ],
              "type": "is_present"
            }
          ],
          "next": "reply_from_param"
        }
      ],
      "properties": {
        "input": "{{flow.data.initial_message}}",
        "offset": {
          "x": 100,
          "y": 150
        }
      }
    },
    {
      "name": "reply_from_param",
      "type": "send-message",
      "transitions": [],
      "properties": {
        "offset": {
          "x": -150,
          "y": 300
        },
        "body": "You said: {{flow.data.initial_message}}"
      }
    },
    {
      "name": "default_reply",
      "type": "send-message",
      "transitions": [],
      "properties": {
        "offset": {
          "x": 250,
          "y": 300
        },
        "body": "ðŸ‘‹ Hello! How can I help you today?"
      }
    }
  ],
  "initial_state": "trigger",
  "flags": {
    "allow_concurrent_executions": true
  },
  "version": "1.0.0"
}
